{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "~/*": ["./*"]
        },
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*", "typings/**/*"],
    "exclude": ["src/**/*.test.*"]
}
